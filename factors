#include <stdio.h>
#include <stdlib.h>

void factorize(long n) {
    long p, q;
    for (p = 2; p <= n / 2; p++) {
        if (n % p == 0) {
            q = n / p;
            printf("%ld=%ld*%ld\n", n, p, q);
            return;
        }
    }
}

int main(int argc, char *argv[]) {
    if (argc != 2) {
        fprintf(stderr, "Usage: factors <file>\n");
        return 1;
    }

    FILE *file = fopen(argv[1], "r");
    if (!file) {
        perror("Could not open file");
        return 1;
    }

    long number;
    while (fscanf(file, "%ld", &number) != EOF) {
        factorize(number);
    }

    fclose(file);
    return 0;
}
